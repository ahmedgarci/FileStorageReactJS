{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "ESNext",                       
    "lib": ["DOM", "DOM.Iterable", "ESNext"], 
    "allowJs": true,                           
    "skipLibCheck": true,                        
    "strict": true,                           
    "forceConsistentCasingInFileNames": true,  
    "moduleResolution": "Node",               
    "esModuleInterop": true,                  
    "resolveJsonModule": true,                
    "isolatedModules": true,                   
    "noEmit": true,                           
    "jsx": "react-jsx"                        
  },
  "include": ["src"]
//  "exclude": ["node_modules"] // Exclude the `node_modules` folder
}